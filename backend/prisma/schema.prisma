generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// カテゴリテーブル
model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  topics Topic[]

  @@map("categories")
}

// お題テーブル
model Topic {
  id         Int      @id @default(autoincrement())
  text       String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("topics")
}

// お題履歴テーブル
model TopicHistory {
  id        Int      @id @default(autoincrement())
  topicId   Int
  sessionId String?
  createdAt DateTime @default(now())

  @@map("topic_histories")
}

// お気に入りテーブル
model Favorite {
  id        Int      @id @default(autoincrement())
  topicId   Int
  sessionId String?
  createdAt DateTime @default(now())

  @@unique([topicId, sessionId])
  @@map("favorites")
}
